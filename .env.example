# FinOps Analyzer Configuration
# Copy this file to .env and fill in your values

# AI Provider: "openai" or "anthropic"
FINOPS_AI_PROVIDER=openai

# OpenAI Configuration (https://platform.openai.com/api-keys)
FINOPS_OPENAI_API_KEY=sk-your-openai-api-key-here
FINOPS_OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (https://console.anthropic.com/)
# FINOPS_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# FINOPS_ANTHROPIC_MODEL=claude-3-haiku-20240307

# Optional: NewsAPI for additional news sources (https://newsapi.org/)
# FINOPS_NEWSAPI_KEY=your-newsapi-key-here

# Cache Settings
FINOPS_CACHE_ENABLED=true
FINOPS_CACHE_TTL_SECONDS=3600

# Analysis Settings
FINOPS_ANALYSIS_PERIOD_DAYS=30
FINOPS_SENTIMENT_NEWS_COUNT=10
